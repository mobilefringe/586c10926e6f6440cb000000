<div class="mobile_line_break"></div>
<script>
    $(document).ready(function(){
        function renderAll(){
            init();
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            var pages_json = "//www.quintemall.com/pages/" + slug + ".json"
            $.getJSON(pages_json).done(function(data) {
                $('#page_title').html(data.title);
                $('#page_body').html(data.body);
                if(slug === "quinte-contact-us") {
                    $("#contact_us").show();
                }
                if(slug === "quinte-military-discount-program") {
                    $('.page_body h2').css({"padding-bottom": "0"});
                }
            }).fail(function(jqXHR) {
                if (jqXHR.status == 404) {
                    $("#error_msg").fadeIn("fast");
                }
            }); 
        }
        loadMallDataCached(renderAll); 
    })
</script>