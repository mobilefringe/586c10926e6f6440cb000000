<div>
    <h1 class="page_title">Blog</h1>
    <hr>
    <div id="blog_container">
        <script id="blog_template" type="x-tmpl-mustache/text">
            <div class="blogpost">
                <h2>{{title}}</h2>
                <p>{{publish_date}} + {{author}}</p>
                <img src="{{image_url}}" alt="{{title}}"/>
                <p class="blogpost_content">{{body}}</p>
                <a href='/posts/{{slug}}' class="readmore" aria-label="{{title}}">Read Blog Post</a>
            </div>
            <div class="line_break"></div>
        </script>
    </div>
</div>
<script>
$(document).ready(function(e){
    init(e);
    function renderAll(){
        var blog = getBlogDataBySlug("quinte-get-the-look");
        var posts = blog.posts.sortBy(function(o){ return moment(o.publish_date) }).reverse();
        renderPosts('#blog_container', '#blog_template', posts);
        
        setTimeout(function() {
            show_content();
        }, 500);
    }
    loadMallDataCached(renderAll); 
})
</script>